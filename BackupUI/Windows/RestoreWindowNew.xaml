<Window x:Class="BackupUI.Windows.RestoreWindowNew"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restore Backup"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Restore from Backup" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Backup Source Selection -->
        <GroupBox Grid.Row="1" Header="Select Backup" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Backup Source:" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="txtBackupSource" Grid.Column="0" Height="25" Margin="0,0,5,0" IsReadOnly="True"/>
                    <Button Grid.Column="1" Content="Browse..." Width="80" Click="BrowseBackup_Click"/>
                </Grid>

                <Button Content="Scan Backup" Width="120" HorizontalAlignment="Left" Click="ScanBackup_Click" Margin="0,5,0,0"/>

                <!-- Backup Set Info -->
                <StackPanel Name="pnlBackupInfo" Visibility="Collapsed" Margin="0,10,0,0">
                    <TextBlock Name="txtBackupInfo" TextWrapping="Wrap" Foreground="#333" Margin="0,0,0,5"/>
                    
                    <TextBlock Text="Select Restore Point:" Margin="0,10,0,5" FontWeight="Bold"/>
                    <ListBox Name="lstRestorePoints" Height="100" SelectionChanged="RestorePoints_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="10" Foreground="#666"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Restore Options -->
        <GroupBox Grid.Row="2" Header="Restore Options" Padding="10" Name="grpRestoreOptions" IsEnabled="False">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="What to Restore:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <RadioButton Name="rbRestoreAll" Content="Restore everything from backup" IsChecked="True" Margin="0,0,0,5"/>
                    <RadioButton Name="rbRestoreSelected" Content="Select specific items to restore" Margin="0,0,0,15"/>

                    <StackPanel Name="pnlItemSelection" Visibility="Collapsed" Margin="0,0,0,15">
                        <ListBox Name="lstBackupItems" Height="150" SelectionMode="Multiple"/>
                    </StackPanel>

                    <TextBlock Text="Restore Destination:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <RadioButton Name="rbOriginalLocation" Content="Original location" IsChecked="True" Margin="0,0,0,5" 
                                 Checked="RestoreLocation_Changed"/>
                    <RadioButton Name="rbAlternateLocation" Content="Alternate location" Margin="0,0,0,5" 
                                 Checked="RestoreLocation_Changed"/>

                    <Grid Name="pnlAlternateLocation" Visibility="Collapsed" Margin="0,5,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Name="txtRestoreDestination" Grid.Column="0" Height="25" Margin="0,0,5,0"/>
                        <Button Grid.Column="1" Content="Browse..." Width="80" Click="BrowseRestoreDestination_Click"/>
                    </Grid>

                    <CheckBox Name="chkOverwrite" Content="Overwrite existing files" IsChecked="False" Margin="0,0,0,10"/>
                    <CheckBox Name="chkPreservePermissions" Content="Preserve file permissions and attributes" 
                              IsChecked="True" Margin="0,0,0,10"/>
                    <CheckBox Name="chkVerifyAfterRestore" Content="Verify files after restore" IsChecked="True"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- Progress -->
        <StackPanel Grid.Row="3" Visibility="Collapsed" Name="pnlProgress" Margin="0,10,0,10">
            <ProgressBar Name="progressBar" Height="20" Margin="0,0,0,5"/>
            <TextBlock Name="txtProgress" HorizontalAlignment="Center" FontSize="11"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Start Restore" Width="100" Margin="0,0,5,0" Click="StartRestore_Click" Name="btnRestore" IsEnabled="False"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

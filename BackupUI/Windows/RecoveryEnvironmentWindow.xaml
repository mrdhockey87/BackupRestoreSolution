<Window x:Class="BackupUI.Windows.RecoveryEnvironmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Recovery Environment"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Create Bootable Recovery USB" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                Create a bootable USB drive that can be used to restore a system even if it won't boot.
                The recovery environment will contain the restore program and necessary tools.
            </TextBlock>

            <GroupBox Header="USB Drive Selection" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Select USB Drive:" Margin="0,0,0,5"/>
                    <ComboBox Name="cmbUSBDrives" Margin="0,0,0,10" Height="25"/>
                    <Button Content="Refresh Drives" Width="120" HorizontalAlignment="Left" Click="RefreshDrives_Click"/>
                    
                    <TextBlock Name="txtDriveInfo" Margin="0,10,0,0" Foreground="DarkRed" FontWeight="Bold" TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Options">
                <StackPanel Margin="10">
                    <CheckBox Name="chkIncludeDrivers" Content="Include storage drivers" IsChecked="True" Margin="0,0,0,10"/>
                    <CheckBox Name="chkFormatDrive" Content="Format USB drive (WARNING: All data will be lost!)" 
                              IsChecked="True" Margin="0,0,0,10"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <ProgressBar Grid.Row="2" Name="progressBar" Height="20" Margin="0,10,0,10" Visibility="Collapsed"/>
        <TextBlock Grid.Row="2" Name="txtProgress" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Create Recovery USB" Width="150" Margin="0,0,5,0" Click="CreateRecovery_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

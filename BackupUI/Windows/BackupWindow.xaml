<Window x:Class="BackupUI.Windows.BackupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Backup"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Create Backup" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <TabControl Grid.Row="1">
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Backup Name:" Margin="0,0,0,5"/>
                        <TextBox Name="txtBackupName" Margin="0,0,0,15" Height="25"/>

                        <TextBlock Text="Backup Type:" Margin="0,0,0,5"/>
                        <ComboBox Name="cmbBackupType" Margin="0,0,0,15" Height="25" SelectionChanged="BackupType_SelectionChanged"/>

                        <TextBlock Text="What to Backup:" Margin="0,0,0,5"/>
                        <ComboBox Name="cmbBackupTarget" Margin="0,0,0,15" Height="25" SelectionChanged="BackupTarget_SelectionChanged"/>

                        <StackPanel Name="pnlDiskSelection" Visibility="Collapsed" Margin="0,0,0,15">
                            <TextBlock Text="Select Disk:" Margin="0,0,0,5"/>
                            <ComboBox Name="cmbDisks" Height="25"/>
                        </StackPanel>

                        <StackPanel Name="pnlVolumeSelection" Visibility="Collapsed" Margin="0,0,0,15">
                            <TextBlock Text="Select Volume:" Margin="0,0,0,5"/>
                            <ListBox Name="lstVolumes" Height="150" SelectionMode="Multiple"/>
                        </StackPanel>

                        <StackPanel Name="pnlFileSelection" Visibility="Collapsed" Margin="0,0,0,15">
                            <TextBlock Text="Files and Folders:" Margin="0,0,0,5"/>
                            <ListBox Name="lstFiles" Height="150"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <Button Content="Add Files..." Width="100" Margin="0,0,5,0" Click="AddFiles_Click"/>
                                <Button Content="Add Folder..." Width="100" Margin="0,0,5,0" Click="AddFolder_Click"/>
                                <Button Content="Remove" Width="100" Click="RemoveItem_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <CheckBox Name="chkHyperV" Content="Backup Hyper-V Virtual Machines" Margin="0,0,0,15" Checked="HyperV_CheckedChanged" Unchecked="HyperV_CheckedChanged"/>

                        <StackPanel Name="pnlHyperV" Visibility="Collapsed" Margin="0,0,0,15">
                            <TextBlock Text="Select Virtual Machines:" Margin="0,0,0,5"/>
                            <ListBox Name="lstHyperVMachines" Height="150" SelectionMode="Multiple"/>
                            <Button Content="Refresh VMs" Width="100" HorizontalAlignment="Left" Margin="0,5,0,0" Click="RefreshHyperV_Click"/>
                        </StackPanel>

                        <TextBlock Text="Backup Destination:" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="txtDestination" Grid.Column="0" Height="25" Margin="0,0,5,0"/>
                            <Button Grid.Column="1" Content="Browse..." Width="80" Click="BrowseDestination_Click"/>
                        </Grid>

                        <CheckBox Name="chkIncludeSystemState" Content="Include System State (for boot volumes)" Margin="0,0,0,10"/>
                        <CheckBox Name="chkCompress" Content="Compress backup data" IsChecked="True" Margin="0,0,0,10"/>
                        <CheckBox Name="chkVerify" Content="Verify backup after completion" IsChecked="True" Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Schedule">
                <StackPanel Margin="10">
                    <CheckBox Name="chkEnableSchedule" Content="Enable Scheduled Backup" Margin="0,0,0,15" Checked="Schedule_CheckedChanged" Unchecked="Schedule_CheckedChanged"/>

                    <StackPanel Name="pnlSchedule" IsEnabled="False">
                        <TextBlock Text="Frequency:" Margin="0,0,0,5"/>
                        <ComboBox Name="cmbFrequency" Margin="0,0,0,15" Height="25" SelectionChanged="Frequency_SelectionChanged"/>

                        <TextBlock Text="Time:" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ComboBox Name="cmbHour" Width="60" Margin="0,0,5,0"/>
                            <TextBlock Text=":" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Name="cmbMinute" Width="60"/>
                        </StackPanel>

                        <StackPanel Name="pnlWeekly" Visibility="Collapsed" Margin="0,0,0,15">
                            <TextBlock Text="Days of Week:" Margin="0,0,0,5"/>
                            <StackPanel>
                                <CheckBox Name="chkMonday" Content="Monday"/>
                                <CheckBox Name="chkTuesday" Content="Tuesday"/>
                                <CheckBox Name="chkWednesday" Content="Wednesday"/>
                                <CheckBox Name="chkThursday" Content="Thursday"/>
                                <CheckBox Name="chkFriday" Content="Friday"/>
                                <CheckBox Name="chkSaturday" Content="Saturday"/>
                                <CheckBox Name="chkSunday" Content="Sunday"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Name="pnlMonthly" Visibility="Collapsed" Margin="0,0,0,15">
                            <TextBlock Text="Day of Month:" Margin="0,0,0,5"/>
                            <ComboBox Name="cmbDayOfMonth" Width="60" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>

        <ProgressBar Grid.Row="2" Name="progressBar" Height="20" Margin="0,10,0,10" Visibility="Collapsed"/>
        <TextBlock Grid.Row="2" Name="txtProgress" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Start Backup" Width="100" Margin="0,0,5,0" Click="StartBackup_Click"/>
            <Button Content="Save Job" Width="100" Margin="0,0,5,0" Click="SaveJob_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
